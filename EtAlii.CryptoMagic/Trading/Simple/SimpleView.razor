@page "/simple/view/{id?}"

@namespace EtAlii.CryptoMagic

@inherits ViewBase<SimpleTransaction, SimpleTrading, SimpleAlgorithmRunner>

<Row Margin="DefaultLayout.Margin">
    <Column ColumnSize="ColumnSize.Is1">
        <Button Color="Color.Primary">
            <Icon Name="IconName.Pause" />
            Pause
        </Button>
    </Column>
    <Column ColumnSize="ColumnSize.Is1">
        <Blazorise.Button Color="Color.Secondary" Type="ButtonType.Link" To="@($"/simple/edit/{Id}")">
            <Icon Name="@("fa-wrench")"/>
            Change
        </Blazorise.Button>
    </Column>
</Row>
<Row>
    <Column ColumnSize="ColumnSize.Is4.OnDesktop.IsAuto.OnTablet">
        <Card>
            <CardHeader>@Model.Name</CardHeader>
            <Table>
                <TableBody>
                    <TableRow>
                        <TableRowCell>Last success: </TableRowCell><TableRowCell>@Current.LastSuccess</TableRowCell>
                        <TableRowCell>Profit:</TableRowCell><TableRowCell>@Current.Profit</TableRowCell>
                        <TableRowCell></TableRowCell><TableRowCell></TableRowCell>
                    </TableRow>
                    <TableRow>
                        <TableRowCell>Last check: </TableRowCell><TableRowCell>@Current.LastCheck</TableRowCell>
                        <TableRowCell>Result:</TableRowCell><TableRowCell>@Current.Result</TableRowCell>
                        <TableRowCell></TableRowCell><TableRowCell></TableRowCell>
                    </TableRow>
                    <TableRow>
                        <TableRowCell>Next check: </TableRowCell><TableRowCell>@Current.NextCheck</TableRowCell>
                        <TableRowCell>Step:</TableRowCell><TableRowCell>@Current.Step</TableRowCell>
                        <TableRowCell></TableRowCell><TableRowCell></TableRowCell>
                    </TableRow>
                </TableBody>
            </Table>
        </Card>        
    </Column>
    <Column ColumnSize="ColumnSize.Is11.OnDesktop.IsAuto.OnTablet">
        <Card>
            <CardHeader>Current cycle</CardHeader>
              <Table>
                    <TableBody>
                        <TableRow>
                            <TableRowCell>Sell: </TableRowCell><TableRowCell>@Current.Sell</TableRowCell>
                            <TableRowCell>Quantity: </TableRowCell><TableRowCell>@Current.SellQuantity</TableRowCell>
                            <TableRowCell>Trend: </TableRowCell><TableRowCell>@Current.SellTrend</TableRowCell>
                        </TableRow>
                        <TableRow>
                            <TableRowCell>Buy: </TableRowCell><TableRowCell>@Current.Buy</TableRowCell>
                            <TableRowCell>Quantity: </TableRowCell><TableRowCell>@Current.BuyQuantity</TableRowCell>
                            <TableRowCell>Trend: </TableRowCell><TableRowCell>@Current.BuyTrend</TableRowCell>
                        </TableRow>
                        <TableRow>
                            <TableRowCell>Diff: </TableRowCell><TableRowCell>@Current.Diff</TableRowCell>
                            <TableRowCell>Target: </TableRowCell><TableRowCell>@Current.Target</TableRowCell>
                            <TableRowCell></TableRowCell><TableRowCell></TableRowCell>
                        </TableRow>
                    </TableBody>
                </Table>
        </Card>        
    </Column>
</Row>
