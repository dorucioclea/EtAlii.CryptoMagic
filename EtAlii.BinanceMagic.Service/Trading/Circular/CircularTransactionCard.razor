@namespace EtAlii.BinanceMagic.Service

<Card>
    <CardHeader>@Title</CardHeader>
    <CardBody>
    <div class="row">
        <div class="col-xs-1 col-sm-1">Sell: </div>
        <div class="col-xs-2 col-sm-3"><span style="@SellPriceStyle">@Transaction.SellPrice.ToHtml("+") @Trading.ReferenceSymbol</span></div>
        <div class="col-xs-1 col-sm-1">Quantity: </div>
        <div class="col-xs-2 col-sm-3">@Transaction.SellQuantity.ToHtml("+") @Transaction.SellSymbol</div>
        <div class="col-xs-1 col-sm-1">Trend: </div>
        <div class="col-xs-1 col-sm-2"><span style="@SellTrendStyle">@Transaction.SellTrend.ToShortHtml()</span></div>
    </div>
    <div class="row">
        <div class="col-xs-1 col-sm-1">Buy: </div>
        <div class="col-xs-2 col-sm-3"><span style="@BuyPriceStyle">@Transaction.BuyPrice.ToHtml("-") @Trading.ReferenceSymbol</span></div>
        <div class="col-xs-1 col-sm-1">Quantity: </div>
        <div class="col-xs-2 col-sm-3">@Transaction.BuyQuantity.ToHtml("-") @Transaction.BuySymbol</div>
        <div class="col-xs-1 col-sm-1">Trend: </div>
        <div class="col-xs-1 col-sm-2"><span style="@BuyTrendStyle">@Transaction.BuyTrend.ToShortHtml()</span></div>
    </div>
    <div class="row">
        <div class="col-xs-1 col-sm-1">Diff: </div>
        <div class="col-xs-2 col-sm-3"><span style="@DifferenceStyle">@Transaction.Difference.ToHtml() @Trading.ReferenceSymbol</span></div>
        <div class="col-xs-1 col-sm-1">Target: </div>
        <div class="col-xs-2 col-sm-3">@Transaction.Target.ToHtml("+") @Trading.ReferenceSymbol</div>
        <div class="col-xs-1 col-sm-1"></div>
        <div class="col-xs-1 col-sm-2"></div>
    </div>
    </CardBody>
</Card>        
