@page "/circular/list"

@namespace EtAlii.BinanceMagic.Service

@inherits ListBase<CircularTransaction, CircularTrading>

<Row Margin="Margin.Is4">
    <Column ColumnSize="ColumnSize.Is8.OnDesktop.IsAuto.OnTablet">
        <Heading>
            <Icon IconName="@("fa-infinity")"/> Circular tradings
        </Heading>
    </Column>
</Row>

<ListGroup>
    <Repeater Items="@Tradings">
        <Row Margin="Margin.Is4">
            <Column ColumnSize="ColumnSize.Is8.OnDesktop.IsAuto.OnTablet">
                <CircularListItem Context="@context.Context"/>
            </Column>
        </Row>
    </Repeater>
</ListGroup>

<Row Margin="Margin.Is4">
    <Column ColumnSize="ColumnSize.Is8.OnDesktop.IsAuto.OnTablet">
        @if (ApplicationContext.IsOperational)
        {
            <ListGroup>
                <ListGroupItem Clicked="@OnEditSelected">
                    <Icon Name="@("fa-plus")"/> Add
                </ListGroupItem>
            </ListGroup>
        }
        else
        {
            <Paragraph>Application is not yet configured correctly</Paragraph>
        }
    </Column>
</Row>
