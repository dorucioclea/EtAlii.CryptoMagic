@page "/one-off/list"

@namespace EtAlii.BinanceMagic.Service

@inherits ListBase<OneOffTransaction, OneOffTrading>

<Heading Margin="Margin.Is2">
    <Icon IconName="@("fa-chart-line")"/> One-off tradings
</Heading>

<ListGroup Margin="Margin.Is2">
    <Repeater Items="@Tradings">
    <ListGroupItem Clicked="@(() => OnTradingSelected(context.Context.Trading.Id))">
        @context.Context.Trading.Name
    </ListGroupItem>
    </Repeater>
</ListGroup>
@if (ApplicationContext.IsOperational)
{
    <ListGroup Margin="Margin.Is2">
        <ListGroupItem Clicked="@OnEditSelected">
            <Icon Name="@("fa-plus")"/> Add
        </ListGroupItem>
    </ListGroup>
}
else
{
    <Paragraph Margin="Margin.Is2">Application is not yet configured correctly</Paragraph>
}
