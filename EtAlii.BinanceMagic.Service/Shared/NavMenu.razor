@using EtAlii.BinanceMagic.Service.Trading
@inject AlgorithmManager _algorithmManager

<LayoutSiderContent>
    <Bar 
        Breakpoint="Breakpoint.Desktop" 
        NavigationBreakpoint="Breakpoint.Tablet" 
        ThemeContrast="ThemeContrast.Dark"
        Mode="BarMode.VerticalInline" 
        CollapseMode="BarCollapseMode.Small">
        <BarToggler />
        <BarBrand>
            <BarItem>
                <BarLink To="">
                    @* <BarIcon IconName="@("fa-magic")" /> *@
                    @* Binance Magic *@
                </BarLink>
            </BarItem>
        </BarBrand>
        <BarMenu>
            <BarStart>
                <BarItem>
                    <BarLink To="">
                        <BarIcon IconName="IconName.Dashboard" />
                        Dashboard
                    </BarLink>
                </BarItem>
                
                <BarItem>
                    <BarDropdown>
                        <BarDropdownToggle>
                            <BarIcon IconName="@("fa-chart-line")" />
                            Simple trading
                        </BarDropdownToggle>
                        <BarDropdownMenu>
                            <Repeater Items="@SimpleTradings">
                                <BarDropdownItem To="@($"/simple/view/{context.Trading.Id}")">
                                    @context.Trading.Name
                                </BarDropdownItem>
                            </Repeater>
                            <BarDropdownItem To="/simple/edit">
                                <Icon Name="@("fa-plus")" />
                                Add
                            </BarDropdownItem>
                        </BarDropdownMenu>
                    </BarDropdown>
                </BarItem>
                
                <BarItem>                    
                    <BarDropdown>
                        <BarDropdownToggle>
                            <BarIcon IconName="@("fa-infinity")"/>
                            Circular trading
                        </BarDropdownToggle>
                        <BarDropdownMenu>
                            <Repeater Items="@CircularTradings">
                                <BarDropdownItem To="@($"/circular/view/{context.Trading.Id}")">
                                    @context.Trading.Name
                                </BarDropdownItem>
                            </Repeater>
                            <BarDropdownItem To="/circular/edit">
                                <Icon Name="@("fa-plus")"/>
                                Add
                            </BarDropdownItem>
                        </BarDropdownMenu>
                    </BarDropdown>
                </BarItem>
                
                <BarItem>                    
                    <BarDropdown>
                        <BarDropdownToggle>
                            <BarIcon IconName="@("fa-flask")" />
                            Experimental trading 
                        </BarDropdownToggle>
                        <BarDropdownMenu>
                            <Repeater Items="@ExperimentalTradings">
                                <BarDropdownItem To="@($"/experimental/view/{context.Trading.Id}")">
                                    @context.Trading.Name
                                </BarDropdownItem>
                            </Repeater>
                            <BarDropdownItem To="experimental/edit">
                                <Icon Name="@("fa-plus")" />
                                Add
                            </BarDropdownItem>
                        </BarDropdownMenu>
                    </BarDropdown>
                </BarItem>

                
                <BarItem>
                    <BarLink To="/settings">
                        <BarIcon IconName="@("fa-cog")" />
                        Settings
                    </BarLink>
                </BarItem>
            </BarStart>
            <BarEnd>
            </BarEnd>
        </BarMenu>
    </Bar>
</LayoutSiderContent>
   